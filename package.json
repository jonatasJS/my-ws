{
	"name": "my-ws",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "next",
		"build": "next build",
		"start": "next start",
		"qa": "yarn test && yarn lint && yarn type-check",
		"type-check": "tsc",
		"lint": "eslint src --ext .ts,.tsx",
		"lint:css": "stylelint 'src/**/*.{ts,tsx}'",
		"format": "prettier --write 'src/**/*.{ts,tsx}'",
		"updateDeps": "yarn-upgrade-all"
	},
	"dependencies": {
		"next": "^12.2.5",
		"next-pwa": "^5.5.5",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^4.4.0",
		"styled-components": "^5.3.5"
	},
	"devDependencies": {
		"@babel/runtime-corejs2": "^7.18.9",
		"@strv/eslint-config-react": "^4.2.0",
		"@strv/eslint-config-typescript": "^3.2.0",
		"@strv/stylelint-config-styled-components": "^2.0.0",
		"@testing-library/react": "^13.3.0",
		"@types/node": "^18.7.4",
		"@types/react": "^18.0.17",
		"@types/react-dom": "^18.0.6",
		"@types/styled-components": "^5.1.26",
		"babel-eslint": "^10.1.0",
		"babel-plugin-styled-components": "^2.0.7",
		"eslint": "^8.22.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"stylelint": "^14.10.0",
		"stylelint-config-prettier": "^9.0.3",
		"typescript": "^4.7.4",
		"yarn-upgrade-all": "^0.7.1"
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.css": [
			"stylelint",
			"prettier --write"
		],
		"*.{json,md,html}": [
			"prettier --write"
		]
	}
}
